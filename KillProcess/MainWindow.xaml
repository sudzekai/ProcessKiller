<Window x:Class="KillProcess.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KillProcess"
        xmlns:shared="http://schemas.actiprosoftware.com/winfx/xaml/shared"
        
        mc:Ignorable="d"
        
        Title="WorkMode 2.1" Height="650" Width="400" ResizeMode="NoResize">
    <Window.Resources>
        <Style x:Key="Back">
            <Style.Setters>
                <Setter Property="Grid.Background" Value="#1f1f1f"/>
            </Style.Setters>
        </Style>
        <Image x:Key="Image" Source="/images/optbtn.ico" Width="55" Height="55"/>
        <Image x:Key="BPImage" Source="/images/crown.png" Width="55" Height="55"/>
        <Image x:Key="INFOImage" Source="/images/dots.png" Width="55" Height="55"/>
        <Image x:Key="FINDImage" Source="/images/finder.png" Width="55" Height="55"/>
        <Image x:Key="BRUSHImage" Source="/images/brush.png" Width="55" Height="55"/>
        <Image x:Key="GitHubImage" Source="/images/github_logo_icon_147285.png" Width="55" Height="55"/>
        <Image x:Key="OptImage" Source="/images/3643771-configuration-configure-gear-set-setting_113449.png" Width="55" Height="55"/>




    </Window.Resources>

    <Grid Style="{StaticResource Back}">
        <Border Name="STARTBtn">
            <Button Name="Start" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    Width="200" Height="200" 
                    BorderThickness="5" 
                    BorderBrush="#7160e8" 
                    Background="#1f1f1f" 
                    Foreground="White" 
                    Content="Старт" 
                    FontFamily="Comic Sans MS" 
                    FontSize="35" 
                    FontWeight="Bold"
                    Click="Start_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="100"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Border>

        <Border Name="TOOLBar" BorderThickness="3" BorderBrush="#7160e8" Width="180" Height="70" VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Height="60">
                <Button Name="OptBtn" Content="{StaticResource Image}" Background="#1f1f1f" BorderThickness="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="OpenOptions_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="50"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Name="OpenBp" Content="{StaticResource BPImage}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#1f1f1f" BorderThickness="0" Click="OpenBp_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="50"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Name="OpenInfo" Content="{StaticResource INFOImage}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#1f1f1f" BorderThickness="0" Click="OpenInfo_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="50"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>

            <Border.Resources>
                <Style TargetType="Border">
                    <Style.Setters>
                        <Setter Property="CornerRadius" Value="25"/>
                    </Style.Setters>
                </Style>
            </Border.Resources>
        </Border>

        <Border Name="OPTIONSBar" Visibility="Hidden" HorizontalAlignment="Center" BorderBrush="#7160e8" BorderThickness="2" Width="376" Height="525" Background="#1f1f1f" Margin="0 0 0 80" VerticalAlignment="Bottom">
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" Height="520">
                <Label Content="Список процессов" FontFamily="Comic Sans MS" Foreground="White" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center"/>
                <ListView Name="PROCESSESList" Height="454" Width="350" Background="#1f1f1f" BorderThickness="0" FontFamily="Comic Sans MS" Foreground="White" FontSize="15"/>
            </StackPanel>
            <Border.Resources>
                <Style TargetType="Border">
                    <Style.Setters>
                        <Setter Property="CornerRadius" Value="50"/>
                    </Style.Setters>
                </Style>
            </Border.Resources>
        </Border>

        <Border Visibility="Hidden" Name ="AdditionalTOOLBar" HorizontalAlignment="Right" BorderBrush="#7160e8" BorderThickness="2" Height="50" Width="50" VerticalAlignment="Bottom" Margin="0,0,12,10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Name="FINDBtn" Content="{StaticResource FINDImage}" Background="#1f1f1f" Width="45" Height="45" VerticalAlignment="Center" BorderThickness="0" Click="FINDBtn_Click" >
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Style.Setters>
                                <Setter Property="CornerRadius" Value="50"/>
                            </Style.Setters>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
            <Border.Resources>
                <Style TargetType="Border">
                    <Style.Setters>
                        <Setter Property="CornerRadius" Value="50"/>
                    </Style.Setters>
                </Style>
            </Border.Resources>
        </Border>

        <Border Visibility ="Hidden" Name="FINDWindow" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="200" Height="50" Margin="0,0,12,65" Background="#1f1f1f" BorderBrush="#7160e8" BorderThickness="2">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBox Name="FINDTextBox" Text="" Padding="4.25" Width="190" Height="40" BorderThickness="0" FontFamily="Comic Sans MS" FontSize="22" Background="#383838" Foreground="White" TextChanged="FINDTextBox_TextChanged">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Style.Setters>
                                <Setter Property="CornerRadius" Value="22"/>
                            </Style.Setters>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>

            <Border.Resources>
                <Style TargetType="Border">
                    <Style.Setters>
                        <Setter Property="CornerRadius" Value="26"/>
                    </Style.Setters>
                </Style>
            </Border.Resources>
        </Border>


        <Border Name="INFOBar" Visibility="Hidden" Width="205" Height="70" HorizontalAlignment="Center" VerticalAlignment="Bottom" BorderBrush="#7160e8" BorderThickness="2" Background="#1f1f1f" Margin="0 0 0 80" >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Height="70" VerticalAlignment="Center">
                <Button Name="GitHubBtn" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="{StaticResource GitHubImage}" Height="60" Width="60" Background="#1f1f1f" Canvas.Left="55" Canvas.Top="5" BorderBrush="#7160e8" HorizontalAlignment="Left" VerticalAlignment="Center" Click="GitHubBtn_Click">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="50"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Name ="GLobalOptionsBtn" Content="{StaticResource OptImage}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="60" Width="60" Background="#1f1f1f" Canvas.Top="5" HorizontalAlignment="Left" VerticalAlignment="Center" BorderBrush="#7160e8" Canvas.Left="110" Margin="5">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="50"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Name ="PersonalizationBtn" Content="{StaticResource BRUSHImage}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="60" Width="60" Background="#1f1f1f" Canvas.Top="5" HorizontalAlignment="Left" VerticalAlignment="Center" BorderBrush="#7160e8" Canvas.Left="165">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="50"/>
                        </Style>
                    </Button.Resources>
                </Button>

            </StackPanel>
            <Border.Resources>
                <Style TargetType="Border">
                    <Style.Setters>
                        <Setter Property="CornerRadius" Value="30"/>
                    </Style.Setters>
                </Style>
            </Border.Resources>
        </Border>

    </Grid>



</Window>
